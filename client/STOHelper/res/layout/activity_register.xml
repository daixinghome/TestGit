<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:padding="20dp" >

        <ImageView
            android:layout_width="190dp"
            android:layout_height="65dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.22"
            android:background="@drawable/logo4" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_margin="1dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号:" />

            <EditText
                android:id="@+id/register_et_phoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入手机号..."
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/register_btn_getVCode"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:background="@drawable/register_btn_getvcode_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_margin="1dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密    码:" />

            <EditText
                android:id="@+id/register_et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入您的账户密码..."
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_margin="1dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓    名:" />

            <EditText
                android:id="@+id/register_et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="姓名..."
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性    别:" />

            <Spinner
                android:id="@+id/register_spinner_gender"
                android:layout_width="60dp"
                android:layout_height="40dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_margin="1dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证:" />

            <EditText
                android:id="@+id/register_et_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入身份证号(选填)"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_margin="1dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地    址:" />

            <EditText
                android:id="@+id/register_et_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入家庭住址(选填)"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <EditText
                android:id="@+id/register_et_vCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入短信验证码..."
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/register_btn_checkVCode"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/register_btn_checkvcode_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageButton
                android:id="@+id/register_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/register_btn_cancel_normal" />
            
            <ImageButton
                android:id="@+id/register_btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/register_btn_submit_normal" />

            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>